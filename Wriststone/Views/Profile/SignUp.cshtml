@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Layout.cshtml";
}
@model Uri
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

<div class="log">
    <h1>@localizer["Sign Up"]</h1>
    <p>@localizer["Please fill in this form to enter account."]</p>
    <form method="post" action="/Profile/SignUp">
        @if (ViewData["error"] != null)
        {
            <span>@ViewData["error"]</span>
        }
        <input type="hidden" name="redirect" value="@Model" />
        <input type="text" placeholder="Enter Login or Email" name="login" required>
        <input type="password" placeholder="Enter Password" name="password" required>
        <a href="/Profile/Recovery">@localizer["Remember Password"]</a>
        <input type="submit" value="Sign Up">
    </form>
    <form action="/Profile/Register">
        <input type="submit" value="Register">
    </form>
</div>

